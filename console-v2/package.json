{
  "name": "kapua-console-v2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "concurrently \"cd server && npm i\" \"cd ui && npm i\"",
    "build": "concurrently \"npm run build:ui\" \"npm run build:server\"",
    "build:ui": "cd ui && npm run build",
    "build:server": "cd server && npm run build",
    "start": "npm run ui && npm run server",
    "start:dev": "concurrently -p \"[{name} - {time}]\" -n \"UI,SERVER\" \"npm run ui:dev\" \"npm run server:dev\"",
    "ui": "cd ui && npm start",
    "ui:dev": "cd ui && npm run start:dev",
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run start:dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eclipse/kapua.git"
  },
  "bugs": {
    "url": "https://github.com/eclipse/kapua/issues"
  },
  "author": "",
  "license": "EPL-1.0",
  "devDependencies": {
    "concurrently": "^3.4.0",
    "tslint": "^4.5.1",
    "typescript": "~2.2.1"
  }
}
